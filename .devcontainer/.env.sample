# 環境情報
# 語群はci local dev stg prod
APP=local
IS_HIDDEN_SQL=false
IS_HIDDEN_TEST_SQL=false

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Gメール秘密鍵配置場所
GMAIL_PORT=5555
OPENAI_API_KEY=yourToken

# Gメール取得ラベル
LABEL=営業/案件

# DB周り
MYSQL_USER=user
MYSQL_PASSWORD=password
DB_HOST=mysql # DB_HOSTにはDBコンテナ名を入れる。
DB_PORT=3306 # コンテナ間のport
MYSQL_PORT=3307 # コンテナのport
MYSQL_DATABASE=development
MYSQL_TEST_DATABASE=test

# メール送信周り
SMTP_HOST=mailhog
SMTP_PORT=1025
EMAIL_FROM_ADDRESS=no-reply@local.auth.example.com

# Gメール秘密鍵配置場所
GMAIL_PORT=5555
EMAIL_TOKEN_KEY_V1=your-32-byte-or-longer-email-key-here-change-this-in-production
EMAIL_TOKEN_SALT=your-random-email-salt-value-here-change-this
EMAIL_GMAIL_CLIENT_ID= # 必須: Gmail OAuthクライアントID
EMAIL_GMAIL_CLIENT_SECRET= # 必須: Gmail OAuthクライアントシークレット
EMAIL_GMAIL_REDIRECT_URL=http://localhost:3000/account_links/callback
EMAIL_GMAIL_STATE_TTL_SECONDS=600
EMAIL_GMAIL_REFRESH_SKEW_SECONDS=600 # Gメール有効期限オフセット秒数


# JWT設定
JWT_SECRET_KEY=your_jwt_secret_key_here

# アプリケーション設定
APP_NAME=Gmail Auth App
LOG_LEVEL=info
GO_PORT=8080
REMOTE_CONTAINER_PORT=5994 # この値を変える場合はDockerfileのportも変える必要がある。
GO_DEBUG_PORT=2345 # この値を変える場合はair.tomlのfull_binのlistenも変える必要がある。


# フロントエンド設定（既存のWebアプリケーション用）
USE_SSL=FALSE
DOMAIN=localhost
FRONT_DOMAIN=http://localhost:3000
FRONT_SSL_DOMAIN=https://localhost:3000

# Redis 設定
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_local_password
REDIS_DB=0

# レートリミット
REDIS_RATE_LIMIT_RPS=20
GMAIL_API_REQUESTS_PER_SECOND=30
OPENAI_API_REQUESTS_PER_SECOND=30
REDIS_RATE_LIMIT_WINDOW_CONFIG="1:40,10:400,60:2400"
RATE_LIMIT_SCRIPT_PATH="internal/library/redis/script/scripts/rate_limit.lua"
